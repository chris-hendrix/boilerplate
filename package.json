{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "install:client": "npm install ./client --prefix ./client",
    "install:all": "npm install && npm install:client",
    "start": "npm start ./client --prefix ./client",
    "start:test": "npm run start:test ./client --prefix ./client",
    "tsc": "tsc",
    "dev": "nodemon -L src/index.ts",
    "server": "NODE_ENV=production ts-node src/index.ts",
    "dev:test": "NODE_ENV=test nodemon -L src/index.ts",
    "dev:static": "NODE_ENV=production nodemon -L src/index.ts",
    "lint": "eslint --ext .ts,.tsx .",
    "up": "docker-compose -f docker-compose.yml up -d",
    "down": "docker-compose -f docker-compose.yml down",
    "up:client": "docker-compose -f docker-compose.client.yml up -d",
    "down:client": "docker-compose -f docker-compose.client.yml down",
    "up:test": "NODE_ENV=test docker-compose -f docker-compose.test.yml up -d",
    "down:test": "docker-compose -f docker-compose.test.yml down",
    "test": "NODE_ENV=test jest --verbose --runInBand --forceExit",
    "test:loc": "NODE_ENV=test npm run up:test && npm run test",
    "migrate": "ts-node src/util/migrate.ts",
    "rollback": "ts-node src/util/rollback.ts",
    "pipeline": "act -j pipeline",
    "test:client": "npm run test:ci ./client --prefix ./client",
    "test:e2e": "npm run test:e2e ./client --prefix ./client",
    "build:client": "./client --prefix ./client",
    "build": "sudo npm run build ./client --prefix  ./client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chris-hendrix/boilerplate.git"
  },
  "author": "Chris Hendrix",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chris-hendrix/boilerplate/issues"
  },
  "homepage": "https://github.com/chris-hendrix/boilerplate#readme",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.0",
    "@types/pg": "^8.6.5",
    "@types/sequelize": "^4.28.13",
    "@types/supertest": "^2.0.12",
    "@types/umzug": "^2.3.3",
    "@types/validator": "^13.7.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "dotenv": "^16.0.1",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.2",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.21.2",
    "sequelize-typescript": "^2.1.3",
    "umzug": "^3.1.1",
    "winston": "^3.8.1"
  }
}
